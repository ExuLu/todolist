<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <title>ToDoList</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>

  <body>
    <div class="container_btns">
      <form action="/work" method="POST">
        <button class="btn" id="work">Work Tasks</button>
      </form>
      <form action="/everyday" method="POST">
        <button class="btn" id="everyday">Everyday Tasks</button>
      </form>
    </div>

    <div class="container">
      <div id="newtask">
        <form action="/submit" method="POST">
          <input type="text" placeholder="Add New Task" name="newtask" />
          <button id="submit">+</button>
        </form>
      </div>

      <div id="tasks">
        <% tasks.forEach((task) => { %>
        <div class="task">
          <input type="checkbox" class="delete" name="checkbox" />

          <span class="taskname"><%= task %></span>
        </div>
        <% }) %>
      </div>
    </div>
    <script src="../index.js"></script>
  </body>
</html>
